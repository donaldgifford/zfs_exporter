{
  "uid": "zfs-status",
  "title": "ZFS Status",
  "tags": [
    "zfs",
    "prometheus"
  ],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "fiscalYearStartMonth": 0,
  "refresh": "30s",
  "schemaVersion": 41,
  "panels": [
    {
      "type": "row",
      "collapsed": false,
      "title": "Pool Health",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 0,
      "panels": []
    },
    {
      "type": "stat",
      "targets": [
        {
          "expr": "zfs_pool_health{state=\"online\", pool=~\"$pool\"}",
          "legendFormat": "{{ pool }}",
          "refId": "A"
        }
      ],
      "title": "Pool Health",
      "description": "Pool online/offline status. Shows ONLINE when the health metric equals 1.",
      "transparent": false,
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 1
      },
      "repeatDirection": "h",
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "reduceOptions": {
          "calcs": []
        },
        "percentChangeColorMode": "standard",
        "orientation": ""
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "NOT ONLINE",
                  "color": "red",
                  "index": 1
                },
                "1": {
                  "text": "ONLINE",
                  "color": "green",
                  "index": 0
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "targets": [
        {
          "expr": "zfs_pool_allocated_bytes{pool=~\"$pool\"} / zfs_pool_size_bytes{pool=~\"$pool\"}",
          "legendFormat": "{{ pool }}",
          "refId": "A"
        }
      ],
      "title": "Pool Capacity",
      "description": "Allocated bytes as a fraction of total pool size.",
      "transparent": false,
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 1
      },
      "repeatDirection": "h",
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "reduceOptions": {
          "calcs": []
        },
        "percentChangeColorMode": "standard",
        "orientation": ""
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 1,
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 0.8,
                "color": "yellow"
              },
              {
                "value": 0.9,
                "color": "red"
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "targets": [
        {
          "expr": "zfs_pool_resilver_active{pool=~\"$pool\"}",
          "legendFormat": "{{ pool }} resilver",
          "refId": "A"
        },
        {
          "expr": "zfs_pool_scrub_active{pool=~\"$pool\"}",
          "legendFormat": "{{ pool }} scrub",
          "refId": "B"
        }
      ],
      "title": "Resilver/Scrub Status",
      "description": "Active resilver or scrub operations. IDLE when no operations are running.",
      "transparent": false,
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 10
      },
      "repeatDirection": "h",
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "reduceOptions": {
          "calcs": []
        },
        "percentChangeColorMode": "standard",
        "orientation": ""
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "IDLE",
                  "color": "green",
                  "index": 1
                },
                "1": {
                  "text": "ACTIVE",
                  "color": "orange",
                  "index": 0
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1,
                "color": "orange"
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "targets": [
        {
          "expr": "predict_linear(zfs_pool_free_bytes{pool=~\"$pool\"}[7d], 30*24*3600) / zfs_pool_free_bytes{pool=~\"$pool\"}",
          "legendFormat": "{{ pool }}",
          "refId": "A"
        }
      ],
      "title": "Pool Days Until Full",
      "description": "Estimated days until pool reaches full capacity based on 7-day linear trend extrapolated to 30 days. Higher is better.",
      "transparent": false,
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 10
      },
      "repeatDirection": "h",
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "reduceOptions": {
          "calcs": []
        },
        "percentChangeColorMode": "standard",
        "orientation": ""
      },
      "fieldConfig": {
        "defaults": {
          "unit": "d",
          "decimals": 0,
          "mappings": [
            {
              "type": "range",
              "options": {
                "from": -1000000000000000,
                "to": 0,
                "result": {
                  "text": "Not filling",
                  "color": "green",
                  "index": 0
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 7,
                "color": "yellow"
              },
              {
                "value": 30,
                "color": "green"
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        },
        "overrides": []
      }
    },
    {
      "type": "row",
      "collapsed": false,
      "title": "Service Health",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 19
      },
      "id": 0,
      "panels": []
    },
    {
      "type": "stat",
      "targets": [
        {
          "expr": "zfs_service_up",
          "legendFormat": "{{ service }}",
          "refId": "A"
        }
      ],
      "title": "Service Status",
      "description": "Shows whether monitored systemd services (ZFS, NFS, SMB, iSCSI) are active. Green = running, Red = down.",
      "transparent": false,
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 20
      },
      "repeatDirection": "h",
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "reduceOptions": {
          "calcs": []
        },
        "percentChangeColorMode": "standard",
        "orientation": ""
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red",
                  "index": 1
                },
                "1": {
                  "text": "UP",
                  "color": "green",
                  "index": 0
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "targets": [
        {
          "expr": "(count(zfs_dataset_share_nfs == 1) \u003e 0) and (zfs_service_up{service=\"nfs\"} == 0)",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "title": "NFS Share Mismatch",
      "description": "NFS shares exist but NFS service is down",
      "transparent": false,
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 20
      },
      "repeatDirection": "h",
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "reduceOptions": {
          "calcs": []
        },
        "percentChangeColorMode": "standard",
        "orientation": ""
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "mappings": [
            {
              "type": "special",
              "options": {
                "match": "null+nan",
                "result": {
                  "text": "OK",
                  "color": "green",
                  "index": 0
                }
              }
            },
            {
              "type": "value",
              "options": {
                "1": {
                  "text": "MISMATCH",
                  "color": "red",
                  "index": 1
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 1,
                "color": "red"
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "targets": [
        {
          "expr": "(count(zfs_dataset_share_smb == 1) \u003e 0) and (zfs_service_up{service=\"smb\"} == 0)",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "title": "SMB Share Mismatch",
      "description": "SMB shares exist but SMB service is down",
      "transparent": false,
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 29
      },
      "repeatDirection": "h",
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "reduceOptions": {
          "calcs": []
        },
        "percentChangeColorMode": "standard",
        "orientation": ""
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "mappings": [
            {
              "type": "special",
              "options": {
                "match": "null+nan",
                "result": {
                  "text": "OK",
                  "color": "green",
                  "index": 0
                }
              }
            },
            {
              "type": "value",
              "options": {
                "1": {
                  "text": "MISMATCH",
                  "color": "red",
                  "index": 1
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 1,
                "color": "red"
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "targets": [
        {
          "expr": "zfs_up",
          "legendFormat": "ZFS commands",
          "refId": "A"
        }
      ],
      "title": "Exporter Up",
      "description": "Shows whether the ZFS exporter itself is up and able to execute ZFS commands. Green = operational, Red = ZFS commands failing.",
      "transparent": false,
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 29
      },
      "repeatDirection": "h",
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "reduceOptions": {
          "calcs": []
        },
        "percentChangeColorMode": "standard",
        "orientation": ""
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red",
                  "index": 1
                },
                "1": {
                  "text": "UP",
                  "color": "green",
                  "index": 0
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        },
        "overrides": []
      }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "datasource",
        "label": "Data Source",
        "skipUrlSync": false,
        "query": "prometheus",
        "multi": false,
        "allowCustomValue": true,
        "includeAll": false,
        "auto": false,
        "auto_min": "10s",
        "auto_count": 30
      },
      {
        "type": "query",
        "name": "pool",
        "label": "Pool",
        "skipUrlSync": false,
        "query": "label_values(zfs_pool_size_bytes, pool)",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "multi": true,
        "allowCustomValue": true,
        "refresh": 2,
        "sort": 1,
        "includeAll": true,
        "auto": false,
        "auto_min": "10s",
        "auto_count": 30
      }
    ]
  },
  "annotations": {}
}
