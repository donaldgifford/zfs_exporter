          "placement": "bottom",
          "showLegend": true
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${datasource}"
          },
          "editorMode": "code",
          "expr": "zfs_pool_allocated_bytes{pool=~\"$pool\"}",
          "legendFormat": "{{pool}} allocated",
          "range": true,
          "refId": "A"
        },
        {
