{
  "uid": "zfs-details",
  "title": "ZFS Details",
  "tags": [
    "zfs",
    "prometheus"
  ],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "fiscalYearStartMonth": 0,
  "refresh": "30s",
  "schemaVersion": 41,
  "panels": [
    {
      "type": "row",
      "collapsed": false,
      "title": "Pool Capacity",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 0,
      "panels": []
    },
    {
      "type": "timeseries",
      "targets": [
        {
          "expr": "zfs_pool_allocated_bytes{pool=~\"$pool\"}",
          "legendFormat": "{{pool}} allocated",
          "refId": "A"
        },
        {
          "expr": "zfs_pool_free_bytes{pool=~\"$pool\"}",
          "legendFormat": "{{pool}} free",
          "refId": "B"
        }
      ],
      "title": "Pool Usage Over Time",
      "description": "Pool allocated and free bytes over time.",
      "transparent": false,
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 1
      },
      "repeatDirection": "h",
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true,
          "calcs": [
            "lastNotNull"
          ]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              }
            ]
          },
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "stacking": {
              "mode": "normal"
            }
          }
        },
        "overrides": []
      }
    },
    {
      "type": "bargauge",
      "targets": [
        {
          "expr": "zfs_pool_allocated_bytes{pool=~\"$pool\"} / zfs_pool_size_bytes{pool=~\"$pool\"}",
          "instant": true,
          "range": false,
          "format": "table",
          "legendFormat": "{{pool}}",
          "refId": "A"
        }
      ],
      "title": "Pool Usage % (Allocated / Total)",
      "description": "Current allocated bytes compared to total pool size.",
      "transparent": false,
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 1
      },
      "repeatDirection": "h",
      "options": {
        "displayMode": "gradient",
        "valueMode": "color",
        "namePlacement": "auto",
        "showUnfilled": true,
        "sizing": "auto",
        "minVizWidth": 8,
        "minVizHeight": 16,
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": false,
          "calcs": []
        },
        "reduceOptions": {
          "calcs": []
        },
        "maxVizHeight": 300,
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 0.7,
                "color": "yellow"
              },
              {
                "value": 0.8,
                "color": "orange"
              },
              {
                "value": 0.9,
                "color": "red"
